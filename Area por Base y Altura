#include "stdafx.h"
#include "stdio.h"
#include "conio.h"
#include "math.h"

int main()
{
	float b, h, A;
	printf ("CALCULO DE EL AREA DEL TRIANGULO \n");
	printf ("INTRODUZCA LA BASESILLA: ");
    scanf_s ("%f", &b);
	printf ("INTRODUZCA LA ALTURILLA: ");
    scanf_s ("%f", &h);
	A = (b*h/2);
	printf ("EL AREA DE EL TRIANGULILLO ES: %f \n", A);
	getch ();
	return 0;
}
